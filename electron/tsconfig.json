{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "outDir": "../dist-electron",
        "rootDir": "../",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "resolveJsonModule": true
    },
    "include": [
        "./**/*.ts",
        "../src/lib/**/*.ts"
    ],
    "exclude": [
        "../node_modules"
    ]
}